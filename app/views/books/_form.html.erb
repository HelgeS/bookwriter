<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Speichern', class: 'btn btn-primary' %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :edition %><br />
    <%= f.number_field :edition, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :published %><br />
    <%= f.date_select :published, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :genre %><br />
    <%= f.text_field :genre, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :tags %><br />
    <%= f.text_field :tags, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :users %><br/>
    <%= f.autocomplete_field :users,
                             autocomplete_user_email_books_path,
                             'data-delimiter' => ',',
                             :multiple => true,
                             'data-auto-focus' => true,
                             :id_element => '#user_ids',
                             class: 'form-control' %>
    <%= f.hidden_field :user_ids %>
  </div>
  <div class="field">
    <%= f.label :abstract %><br />
    <%= f.cktext_area :abstract, class: 'form-control' %>
  </div>
<% end %>
