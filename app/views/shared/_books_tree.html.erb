<%= button_to 'Neues Buch anlegen', new_book_path, remote: true, method: 'get', format: 'js', class: 'btn btn-default' %>

<div id="books_tree" data-books-url="<%= books_path 'json' %>"
  <% if @book.nil? or @book.id.nil? %>
    data-url="<%= books_treeview_path 'json' %>" data-chunks-url="">
  <% else %>
    data-url="<%= book_treeview_path @book, 'json' %>" data-chunks-url="<%= book_chunks_path @book, 'json' %>">
  <% end %>
</div>